    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".SearchFragment" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:foregroundGravity="fill_horizontal|top"
